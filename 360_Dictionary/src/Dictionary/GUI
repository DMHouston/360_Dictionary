package Dictionary;

import java.awt.*;
import java.applet.*;
import javax.swing.*;
import java.util.*;


public class GUI extends JPanel
{
    static BorderLayout layout;
    static FlowLayout layout2;
    static JLabel intro;
    static JLabel inputMessage;
    static JTextField textField;
    static JTextArea tokenArea, DictArea;
    static JPanel panel1, panel2, panel3, panel4;
    static JButton submit, add;
    
    
    public static void addComponentsToPane(Container pane)
    {
    	// Initialize GUI Components
    	layout = new BorderLayout();
    	layout2 = new FlowLayout();
    	panel1 = new JPanel();
    	panel2 = new JPanel();
    	panel3 = new JPanel();
    	panel4 = new JPanel();
    	intro = new JLabel("Welcome to SpellChecker!");
    	inputMessage = new JLabel("Input Text File:");
    	textField = new JTextField(30);
    	tokenArea = new JTextArea(5,20);
    	DictArea = new JTextArea(5,20);
    	submit = new JButton("SpellCheck!");
    	add = new JButton ("Add to Dictionary");
    	
    	pane.setLayout(layout);
        panel2.setLayout(layout2);
        panel4.setLayout(layout2);
        
        // Centers the Introduction message
        intro.setHorizontalAlignment(JLabel.CENTER);
        tokenArea.setEditable(false);
        DictArea.setEditable(false);
        panel1.add(intro);
        panel2.add(inputMessage);
        panel2.add(textField);
        panel3.add(submit);
        panel4.add(tokenArea);
        panel4.add(add);
        panel4.add(DictArea);
        
        pane.add(panel1, BorderLayout.NORTH);
        pane.add(panel2, BorderLayout.CENTER);
        pane.add(panel3, BorderLayout.AFTER_LINE_ENDS);
        pane.add(panel4, BorderLayout.SOUTH);
    }
    
    private static void createAndShowGUI() {
        
        //Create and set up the window.
        JFrame frame = new JFrame("BorderLayoutDemo");
        frame.setSize(400, 400);
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        //Set up the content pane.
        addComponentsToPane(frame.getContentPane());
        //Use the content pane's default BorderLayout. No need for
        //setLayout(new BorderLayout());
        //Display the window.
        frame.pack();
        frame.setVisible(true);
    }
    
    public static void main(String[] args) {
        /* Use an appropriate Look and Feel */
        try {
            //UIManager.setLookAndFeel("com.sun.java.swing.plaf.windows.WindowsLookAndFeel");
            UIManager.setLookAndFeel("javax.swing.plaf.metal.MetalLookAndFeel");
        } catch (UnsupportedLookAndFeelException ex) {
            ex.printStackTrace();
        } catch (IllegalAccessException ex) {
            ex.printStackTrace();
        } catch (InstantiationException ex) {
            ex.printStackTrace();
        } catch (ClassNotFoundException ex) {
            ex.printStackTrace();
        }
        /* Turn off metal's use bold fonts */
        UIManager.put("swing.boldMetal", Boolean.FALSE);
         
        //Schedule a job for the event dispatch thread:
        //creating and showing this application's GUI.
        javax.swing.SwingUtilities.invokeLater(new Runnable() {
            public void run() {
                createAndShowGUI();
            }
        });
    }
}
